<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient - deep purple/blue night liquid glass -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:startColor="#3D348B"
                android:centerColor="#5C4D9A"
                android:endColor="#7B68B5"
                android:angle="135" />
        </shape>
    </item>
    <!-- Depth layer -->
    <item android:top="50dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <gradient
                android:startColor="#25241773"
                android:endColor="#20311B92"
                android:angle="270" />
        </shape>
    </item>
    <!-- Moon glow at top -->
    <item android:left="50dp" android:bottom="60dp" android:right="10dp" android:top="5dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#35FFFFFF"
                android:endColor="#00FFFFFF"
                android:gradientRadius="60dp"
                android:type="radial" />
        </shape>
    </item>
    <!-- Glass highlight -->
    <item android:bottom="70dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="28dp" android:topRightRadius="28dp"/>
            <gradient
                android:startColor="#25FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <stroke android:width="1dp" android:color="#25FFFFFF" />
        </shape>
    </item>
</layer-list>
