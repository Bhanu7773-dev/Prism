<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#18000000" />
        </shape>
    </item>
    <!-- Main background - Sunset orange/red gradient -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:startColor="#2C3E50"
                android:centerColor="#E74C3C"
                android:endColor="#F39C12"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>
    <!-- Warm horizon glow -->
    <item android:top="40dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <gradient
                android:startColor="#00000000"
                android:endColor="#30FFD700"
                android:angle="270" />
        </shape>
    </item>
</layer-list>
