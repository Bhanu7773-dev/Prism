<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/widget_bg_glass">

    <!-- Top: Location -->
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="London"
        android:textSize="14sp"
        android:textColor="#B0FFFFFF"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="140dp" />

    <!-- Weather Icon (top right) -->
    <ImageView
        android:id="@+id/iv_weather_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_weather_cloudy" />

    <!-- Large Temperature (center-left) -->
    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:text="24°"
        android:textSize="64sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-thin"
        android:includeFontPadding="false" />

    <!-- Condition (center-right) -->
    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="Cloudy"
        android:textSize="16sp"
        android:textColor="#90FFFFFF"
        android:fontFamily="sans-serif-light" />

    <!-- Bottom: Feels like + Humidity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_feels_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feels 22°"
            android:textSize="12sp"
            android:textColor="#80FFFFFF"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="65%"
            android:textSize="12sp"
            android:textColor="#80FFFFFF"
            android:fontFamily="sans-serif-light"
            android:gravity="end" />

    </LinearLayout>

</RelativeLayout>
