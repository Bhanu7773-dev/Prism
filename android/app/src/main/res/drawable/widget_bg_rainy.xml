<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient - blue/teal liquid glass for rain -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:startColor="#B3E5FC"
                android:centerColor="#81D4FA"
                android:endColor="#4FC3F7"
                android:angle="135" />
        </shape>
    </item>
    <!-- Rain depth layer -->
    <item android:top="50dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <gradient
                android:startColor="#2029B6F6"
                android:endColor="#3003A9F4"
                android:angle="270" />
        </shape>
    </item>
    <!-- Glass highlight -->
    <item android:bottom="70dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="28dp" android:topRightRadius="28dp"/>
            <gradient
                android:startColor="#45FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <stroke android:width="1dp" android:color="#30FFFFFF" />
        </shape>
    </item>
</layer-list>
