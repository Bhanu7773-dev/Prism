<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_weather_rainy">
    
    <!-- Rain drop 1 animation -->
    <target android:name="rainGroup1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="translateY"
                android:valueFrom="0"
                android:valueTo="8"
                android:duration="600"
                android:repeatCount="infinite"
                android:repeatMode="restart"
                android:interpolator="@android:interpolator/accelerate_decelerate"/>
        </aapt:attr>
    </target>
    
    <!-- Rain drop 2 animation (delayed) -->
    <target android:name="rainGroup2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="translateY"
                android:valueFrom="0"
                android:valueTo="8"
                android:duration="600"
                android:startOffset="200"
                android:repeatCount="infinite"
                android:repeatMode="restart"
                android:interpolator="@android:interpolator/accelerate_decelerate"/>
        </aapt:attr>
    </target>
    
    <!-- Rain drop 3 animation (more delayed) -->
    <target android:name="rainGroup3">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="translateY"
                android:valueFrom="0"
                android:valueTo="8"
                android:duration="600"
                android:startOffset="400"
                android:repeatCount="infinite"
                android:repeatMode="restart"
                android:interpolator="@android:interpolator/accelerate_decelerate"/>
        </aapt:attr>
    </target>
</animated-vector>
